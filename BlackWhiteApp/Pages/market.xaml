<Page x:Class="BlackWhiteApp.Pages.market"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlackWhiteApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="market">

    <Grid Background="#392f42">
        <Line 
            X1="180" Y1="1"
            X2="180" Y2="750"
            Stroke="White" 
            StrokeThickness="4"/>

        <Line 
            X1="180" Y1="120"
            X2="1000" Y2="120"
            Stroke="White"
            StrokeThickness="4"/>

        <TextBlock
            Text="Маркет"
            FontSize="90"
            FontWeight="Bold"
            Foreground="White"
            Margin="190,0,0,0"/>

        <Grid x:Name="Product">
            <Border>
                <Rectangle
                    Fill="White"
                    Margin="300,210,254,128"
                    RadiusX="50"
                    RadiusY="50"/>

                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.7"
                        ShadowDepth="3"/>
                </Border.Effect>
            </Border>
            
            
        </Grid>
    </Grid>
</Page>
